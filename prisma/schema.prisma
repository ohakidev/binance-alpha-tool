generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model
model User {
  id            String    @id @default(uuid())
  name          String
  walletAddress String?   @unique
  telegramId    String?   @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  airdrops      UserAirdrop[]
  alerts        Alert[]

  @@map("users")
}

// Airdrop model - Enhanced for Binance Alpha
model Airdrop {
  id              String    @id @default(uuid())
  token           String    @unique  // Token symbol (unique identifier)
  name            String
  chain           String              // BSC, ETH, etc.
  logoUrl         String?

  // Binance Alpha specific
  multiplier      Int       @default(1)  // 1x, 2x, 4x
  isBaseline      Boolean   @default(false)
  alphaUrl        String?   // Binance Alpha page URL

  // Airdrop details
  description     String?
  totalSupply     String?
  airdropAmount   String?
  initialPrice    Float?
  currentPrice    Float?

  // Eligibility (stored as JSON string for SQLite compatibility)
  eligibility     String    @default("[]")
  requirements    String    @default("[]")

  // Dates
  snapshotDate    DateTime?
  claimStartDate  DateTime?
  claimEndDate    DateTime?
  listingDate     DateTime?

  // Points system
  requiredPoints  Int?
  pointsPerDay    Int?
  deductPoints    Int?      @default(0)  // Points to deduct after claim

  // Type classification
  type            AirdropType @default(AIRDROP)

  // Contract information
  contractAddress String?   // Token contract address

  // Status
  status          AirdropStatus @default(UPCOMING)
  verified        Boolean       @default(false)
  isActive        Boolean       @default(true)

  // External links
  websiteUrl      String?
  twitterUrl      String?
  discordUrl      String?
  telegramUrl     String?

  // Metadata
  estimatedValue  Float?
  participantCount Int?

  // Admin info
  addedBy         String?   // Admin who added this
  notes           String?   // Internal notes

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  users           UserAirdrop[]
  alerts          Alert[]

  @@index([token])
  @@index([status])
  @@index([isActive])
  @@map("airdrops")
}

// User-Airdrop relationship
model UserAirdrop {
  id          String    @id @default(uuid())
  userId      String
  airdropId   String

  // Tracking
  isEligible  Boolean   @default(false)
  hasClaimed  Boolean   @default(false)
  claimedAt   DateTime?
  claimAmount String?

  // Notifications
  notified    Boolean   @default(false)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  airdrop     Airdrop   @relation(fields: [airdropId], references: [id], onDelete: Cascade)

  @@unique([userId, airdropId])
  @@map("user_airdrops")
}

// Alert/Notification model
model Alert {
  id          String      @id @default(uuid())
  userId      String
  airdropId   String?

  // Alert details
  type        AlertType
  title       String
  message     String

  // Status
  sent        Boolean     @default(false)
  sentAt      DateTime?
  read        Boolean     @default(false)
  readAt      DateTime?

  createdAt   DateTime    @default(now())

  // Relations
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  airdrop     Airdrop?    @relation(fields: [airdropId], references: [id], onDelete: SetNull)

  @@map("alerts")
}

// Stability tracking
model StabilityScore {
  id              String    @id @default(uuid())
  symbol          String

  // Metrics
  stabilityScore  Float
  riskLevel       RiskLevel
  volatilityIndex Float
  volumeScore     Float

  // Price data
  currentPrice    Float
  priceChange     Float
  high24h         Float
  low24h          Float
  volume24h       Float

  timestamp       DateTime  @default(now())

  @@index([symbol, timestamp])
  @@map("stability_scores")
}

// Income tracking
model IncomeEntry {
  id          String    @id @default(uuid())
  userId      String

  // Income details
  amount      Float
  currency    String    @default("USDT")
  source      String
  category    String
  description String?

  // Date
  date        DateTime

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId, date])
  @@map("income_entries")
}

// Enums
enum AirdropStatus {
  UPCOMING
  SNAPSHOT
  CLAIMABLE
  ENDED
  CANCELLED
}

enum AlertType {
  AIRDROP_NEW
  AIRDROP_SNAPSHOT
  AIRDROP_CLAIMABLE
  AIRDROP_ENDING
  PRICE_ALERT
  STABILITY_WARNING
}

enum RiskLevel {
  SAFE
  MODERATE
  HIGH
}

enum AirdropType {
  TGE       // Token Generation Event
  PRETGE    // Pre-TGE
  AIRDROP   // Standard Airdrop
}

// Airdrop Schedule model - Track airdrop timing like alpha123.uk
model AirdropSchedule {
  id              String    @id @default(uuid())
  token           String    // Token symbol
  name            String    // Project full name

  // Schedule details
  scheduledTime   DateTime  // When the airdrop will be available
  endTime         DateTime? // When the airdrop ends (optional)

  // Airdrop info
  points          Int?      // Required points to claim
  deductPoints    Int?      // Points deducted after claim
  amount          String?   // Amount to receive (e.g., "100 POWER")

  // Chain info
  chain           String    @default("BSC")
  contractAddress String?

  // Status tracking
  status          ScheduleStatus @default(UPCOMING)
  type            AirdropType    @default(AIRDROP)

  // Price/Value tracking
  estimatedPrice  Float?    // Estimated price per token
  estimatedValue  Float?    // Estimated total value

  // Source info
  source          String    @default("binance") // binance, manual, announcement
  sourceUrl       String?   // Link to announcement/source

  // Metadata
  logoUrl         String?
  description     String?

  // Flags
  isActive        Boolean   @default(true)
  isVerified      Boolean   @default(false)
  notified        Boolean   @default(false) // Has notification been sent

  // Timestamps
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([token, scheduledTime])
  @@index([scheduledTime])
  @@index([status])
  @@index([token])
  @@map("airdrop_schedules")
}

// Schedule status enum
enum ScheduleStatus {
  UPCOMING    // Not yet available
  TODAY       // Available today
  LIVE        // Currently claimable
  ENDED       // Claim period ended
  CANCELLED   // Cancelled
}

// Binance Alpha Token model - Store raw token data from Binance API
model BinanceAlphaToken {
  id              String    @id @default(uuid())
  alphaId         String    @unique // Binance Alpha ID
  tokenId         String
  symbol          String    @unique
  name            String

  // Chain info
  chainId         String
  chainName       String
  contractAddress String

  // Price data
  price           Float     @default(0)
  priceChange24h  Float     @default(0)
  priceHigh24h    Float     @default(0)
  priceLow24h     Float     @default(0)
  volume24h       Float     @default(0)

  // Market data
  marketCap       Float     @default(0)
  fdv             Float     @default(0)
  liquidity       Float     @default(0)
  holders         Int       @default(0)
  totalSupply     String?
  circulatingSupply String?

  // Alpha specific
  score           Int       @default(0)
  mulPoint        Int       @default(1) // Point multiplier (1x, 2x, 4x)
  listingTime     DateTime?

  // Flags
  onlineTge       Boolean   @default(false)
  onlineAirdrop   Boolean   @default(false)
  hotTag          Boolean   @default(false)
  offline         Boolean   @default(false)
  listingCex      Boolean   @default(false)

  // Status
  isActive        Boolean   @default(true)

  // Metadata
  iconUrl         String?

  // Timestamps
  lastSyncAt      DateTime  @default(now())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([symbol])
  @@index([onlineAirdrop])
  @@index([onlineTge])
  @@map("binance_alpha_tokens")
}

// Sync log for tracking API syncs
model SyncLog {
  id          String    @id @default(uuid())
  source      String    // binance-alpha, alpha123, etc.
  action      String    // fetch, sync, update

  // Results
  success     Boolean
  tokensCount Int       @default(0)
  created     Int       @default(0)
  updated     Int       @default(0)
  errors      Int       @default(0)

  // Timing
  duration    Int       @default(0) // milliseconds

  // Details
  details     String?   // JSON string with additional info
  errorMessage String?

  createdAt   DateTime  @default(now())

  @@index([source, createdAt])
  @@map("sync_logs")
}
